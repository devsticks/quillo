<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/root_listing_detail"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.ListingDetailActivity">


<ImageView
    android:id="@+id/imv_colored_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/div_center"
    android:transitionName="@string/transition_drawable" />


<TextView
    android:id="@+id/lbl_textbook_name"
    style="@style/Text.Primary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/lbl_textbook_description"
    android:background="@color/transparentBackgroundWhite"
    android:padding="16dp"
    tools:text="Stewart Calculus" />

<View
    android:id="@+id/div_center"
    style="@style/Text.Primary"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_centerVertical="true"
    android:transitionName="@string/transition_textbook_name" />

<TextView
    android:id="@+id/lbl_textbook_description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/div_center"
    android:padding="16dp"
    android:transitionName="@string/transition_textbook_description"

    tools:text="Textbook about all things maths" />
</RelativeLayout>